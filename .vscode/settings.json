{
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    // execution path to run pytest is the /back folder
    "python.testing.cwd": "${workspaceFolder}/back",
    "python.testing.pytestArgs": [
        // from /back folder execution path, pytest config is at root (hence ".") inside the pyproject
        "."
    ],
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.lintOnSave": true,
    "prettier.ignorePath": "webapp/.prettierignore",
    "prettier.configPath": "webapp/prettier.config.js",
  
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
      
      
}
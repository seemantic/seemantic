{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.ruff": "always", // General fix all (works with ESLint, Ruff, etc.)
    "source.fixAll.eslint": "always",
    "source.unusedImports": "always",
    "source.organizeImports": "always"
  },
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  // execution path to run pytest is the /back folder
  "python.testing.cwd": "${workspaceFolder}/back",
  "python.testing.pytestArgs": [
    // from /back folder execution path, pytest config is at root (hence ".") inside the pyproject
    "."
  ],
  "prettier.ignorePath": "webapp/.prettierignore",
  "prettier.configPath": "webapp/prettier.config.js",
  "python.defaultInterpreterPath": "${workspaceFolder}/back/.venv/bin/python",
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.requireConfig": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.generateWithTypeAnnotation": true,
  "python.analysis.importFormat": "absolute",
  "python.analysis.inlayHints.callArgumentNames": "all",
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.showOnlyDirectDependenciesInAutoImport": true,
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.typeEvaluation.strictDictionaryInference": true,
  "python.analysis.typeEvaluation.strictListInference": true
}